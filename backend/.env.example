APP_NAME=ClearSheet
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:4000

# -------------------------------------------------------------------
# Database (PostgreSQL - Docker Service: db)
# -------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=clearsheet
DB_USERNAME=clearsheet_user
DB_PASSWORD=clearsheet_pass

# -------------------------------------------------------------------
# Caching / Queue / Session
# -------------------------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_DOMAIN=localhost

# -------------------------------------------------------------------
# Authentication via Sanctum
# -------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:5173,localhost:4000
API_DOMAIN=localhost

# -------------------------------------------------------------------
# Queue
# -------------------------------------------------------------------
QUEUE_CONNECTION=sync

# -------------------------------------------------------------------
# Mail (Opcional â€“ ajustar depois)
# -------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@clearsheet.com"
MAIL_FROM_NAME="${APP_NAME}"

# -------------------------------------------------------------------
# Logging
# -------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug

